# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
end_of_line = lf
charset = utf-8
insert_final_newline = true

# 2 space indentation
[*.{scss,css,json,html,js}]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

[*.{yaml,yml}]
indent_style = space
indent_size = 2
